##install.packages("SnowballC") # for text stemming
#install.packages("wordcloud") # word-cloud generator 
#install.packages("RColorBrewer") # color palettes
##Load Require Library
library(tm)
library(SnowballC)
library(RColorBrewer)
library(wordcloud)
##Read the Data

cloud <- function(text_data){
  text_data.Corpus<-Corpus(VectorSource(text_data))
  text_data.Clean<-tm_map(text_data.Corpus, PlainTextDocument)
  text_data.Clean<-tm_map(text_data.Corpus,tolower)
  text_data.Clean<-tm_map(text_data.Clean,removeNumbers)
  text_data.Clean<-tm_map(text_data.Clean,removeWords,stopwords("english"))
  text_data.Clean<-tm_map(text_data.Clean,removePunctuation)
  text_data.Clean<-tm_map(text_data.Clean,stripWhitespace)
  #text_data.Clean<-tm_map(text_data.Clean,stemDocument)
return (wordcloud(words = text_data.Clean, min.freq = 1,max.words=500, random.order=FALSE, rot.per=0.35,colors=brewer.pal(8, "Dark2")))
}
                       